<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>

        <!-- database connection -->
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/hibernatetestdb</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">admin</property>

<!--
        &lt;!&ndash; second level cache using ehcache &ndash;&gt;

        <property name="hibernate.cache.use_second_level_cache">true</property>
        <property name="hibernate.cache.region.factory_class">org.hibernate.cache.ehcache.EhCacheRegionFactory</property>
-->


        <!-- SQL Dialect-->

        <property name="hibernate.dialect">org.hibernate.dialect.MySQL8Dialect</property>

        <!-- show sql query generated by Hibernate -->
        <property name="hibernate.show_sql">true</property>

        <!-- nicely format the sql query -->
        <property name="hibernate.format_sql">true</property>

        <!-- nicely format the sql query -->
        <property name="hibernate.highlight_sql">true</property>

        <!-- Automatically create the database tables -->

        <property name="hibernate.hbm2ddl.auto">update</property>

        <mapping class="com.shimbhu.chapter2.Student"/>

        <mapping class="com.shimbhu.chapter4.Person"/>

        <!-- chapter 5 uni mapping one to one  -->
        <mapping class="com.shimbhu.chapter5.uni.model.UniPerson5"/>
        <mapping class="com.shimbhu.chapter5.uni.model.UniAadhar5"/>

        <!-- chapter 5 bidirectional with mappedBy mapping  -->
        <mapping class="com.shimbhu.chapter5.bi.mapped_by.model.BiPerson5MappedBy"/>
        <mapping class="com.shimbhu.chapter5.bi.mapped_by.model.BiAadhar5MappedBy"/>

        <!-- chapter 5 bidirectional without mappedBy mapping  -->
        <mapping class="com.shimbhu.chapter5.bi.not_mapped_by.model.BiPerson5WithoutMappedBy"/>
        <mapping class="com.shimbhu.chapter5.bi.not_mapped_by.model.BiAadhar5WithoutMappedBy"/>

        <!-- chapter 6 uni mapping  one to many -->
        <mapping class="com.shimbhu.chapter6.uni.model.UniPerson6"/>
        <mapping class="com.shimbhu.chapter6.uni.model.UniCar6"/>

        <!-- chapter 6 bidirectional with mappedBy mapping  -->
        <mapping class="com.shimbhu.chapter6.bi.mapped_by.model.BiPerson6MappedBy"/>
        <mapping class="com.shimbhu.chapter6.bi.mapped_by.model.BiCar6MappedBy"/>

        <!-- chapter 6 bidirectional without mappedBy mapping  -->
        <mapping class="com.shimbhu.chapter6.bi.without_mapped_by.model.BiPerson6WithoutMappedBy"/>
        <mapping class="com.shimbhu.chapter6.bi.without_mapped_by.model.BiCar6WithoutMappedBy"/>

        <!-- chapter 7 uni mapping  many to many -->
        <mapping class="com.shimbhu.chapter7.uni.model.UniCompany7"/>
        <mapping class="com.shimbhu.chapter7.uni.model.UniPerson7"/>

        <!-- chapter 7 bidirectional with mappedBy mapping  -->
        <mapping class="com.shimbhu.chapter7.bi.mapped_by.model.BiPerson7MappedBy"/>
        <mapping class="com.shimbhu.chapter7.bi.mapped_by.model.BiCompany7MappedBy"/>

        <!-- chapter 7 bidirectional without mappedBy mapping  -->
        <mapping class="com.shimbhu.chapter7.bi.without_mapped_by.model.BiPerson7WithoutMappedBy"/>
        <mapping class="com.shimbhu.chapter7.bi.without_mapped_by.model.BiCompany7WithoutMappedBy"/>

    </session-factory>
</hibernate-configuration>